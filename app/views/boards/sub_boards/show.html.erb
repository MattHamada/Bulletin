<div class="container">
  <div class="row">
    <div class="col-md-4"><%= link_to 'New Topic', new_topic_path(sub_board_id: @sub_board.id) unless current_user.nil?%></div>
  </div>
  <table class="table table-striped">
      <tr>
        <th>Topic</th>
        <th>Created By</th>
        <th>Created At</th>
        <th>Last Post</th>
      </tr>
      <tbody>
        <% @topics.each do |topic| %>
          <tr>
            <td><%= link_to topic.title, topic_path(topic) %></td>
            <td><%= topic.creator_username %></td>
            <td><%= topic.created_at_pretty %></td>
            <td><%= topic.updated_at_pretty %></td>
          </tr>
        <% end %>
      </tbody>
  </table>
</div>