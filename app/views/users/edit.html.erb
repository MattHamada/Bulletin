<div class="container">
  <div class="row">
    <divl class="col-md-6 col-md-offset-3">
      <div class="panel panel-default">
        <div class="panel-heading">
          <strong>Edit Account</strong>
        </div>
        <div class="panel-body">
          <%= form_for(@user, html: { class: 'form form-horizontal', role: 'form' }) do |f| %>
            <%= render 'layouts/errors', object: @user %>
            <div class="form-group">
              <%= f.label :email, class: 'col-sm-2 control-label' %>
              <div class="col-sm-10">
                <%= f.text_field :email, class: 'form-control' %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :username, class: 'col-sm-2 control-label' %>
              <div class="col-sm-10">
                <%= f.text_field :username, class: 'form-control' %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :signature, class: 'col-sm-2 control-label' %>
              <div class="col-sm-10">
                <%= f.text_area :signature, class: 'form-control' %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :timezone, class: 'col-sm-2 control-label' %>
              <div class="col-sm-10">
                <%= f.time_zone_select :timezone, ActiveSupport::TimeZone.us_zones, { default: "Pacific Time (US & Canada)" }, class: 'form-control' %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :avatar, class: 'col-sm-2 control-label' %>
              <div class="col-sm-10">
                <%= f.file_field :avatar%>
              </div>
            </div>
            <div class="row" style="padding-bottom: 2em">
              <div class="col-sm-6 col-sm-offset-5">
                <%= image_tag @user.avatar.url(:thumb) %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label 'Password required', class: 'col-sm-2 control-label' %>
              <div class="col-sm-10">
                <%= f.password_field :password, class: 'form-control' %>
              </div>
            </div>
            <div class="form-group">
              <div style="text-align: center">
                <%= f.submit 'Update', class: 'btn btn-lg btn-primary' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </divl>
  </div>
</div>