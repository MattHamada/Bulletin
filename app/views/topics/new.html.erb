<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="panel panel-default">
        <div class="panel-heading">
          <strong>New Topic</strong>
        </div>
        <div class="panel-body">
        <%= form_for(@topic, html: { class: 'form', role: 'form' }) do |f| %>
            <%= render 'layouts/errors', object: @topic if @topic.errors.any? %>
            <%= render 'layouts/errors', object: @post unless @topic.errors.any?  %>
            <div class="row">
            <div class="col-md-8 col-md-offset-1">
              <div class="form-group">
                <%= f.label(:title) %>
                <%= f.text_field :title, class: 'form-control' %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-8 col-md-offset-1">
              <div class="form-group">
                <%= f.fields_for @post do |builder| %>
                  <%= builder.label(:content) %>
                  <%= builder.text_area(:content, class: 'form-control') %>
                <% end %>
              </div>
            </div>
          </div>
          <%= f.hidden_field :sub_board_id, value: @topic.sub_board_id %>
          <div class="form-group">
            <div style="text-align: center">
              <%= f.submit 'Create', class: 'btn btn-lg btn-primary' %>
            </div>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>